[[inputs.procstat]]
pattern = "noc-classifier"
prefix = "classifier"

[[inputs.httpjson]]
  name = "noc-classifier"
  servers = [
{% for service in noc_config.services -%}
    {% if "classifier" in service -%}
        {% for host in noc_config.services[service] -%}
            {% if ansible_ssh_host in host -%}
"http://{{host}}/mon/",
            {%- endif %}
        {%- endfor %}
    {%- endif %}
{%- endfor %}
  ]
  method = "GET"
  tag_keys = ["service", "instance"]