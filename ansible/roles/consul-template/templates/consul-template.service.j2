[Unit]
Description=Consul-Template Daemon
Wants=basic.target
After=basic.target network.target

[Service]
User=root
Group=root
ExecStart={{ consul_template_bin_path }}/consul-template -config {{consul_template_config_dir}}/{{ consul_template_config_file }} -config {{ consul_template_templates_dir }}
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=on-failure
RestartSec=10s
LimitNOFILE=4096

[Install]
WantedBy=multi-user.target
