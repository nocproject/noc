reporting-disabled = true

[registration]

[meta]
  dir = "{{ influxdb_db_path_meta }}"
  hostname = "{{ ansible_nodename }}"
  bind-address = ":8088"
  retention-autocreate = true
  logging-enabled = true
  pprof-enabled = true  # more details
  lease-duration = "1m0s"

[data]
  dir = "{{ influxdb_db_path_data }}"
  engine = "tsm1"
  wal-dir = "{{ influxdb_db_path_wal }}"
  wal-logging-enabled = true
  query-log-enabled = false
  cache-max-memory-size = {{influx_max_cache_memory}}
  cache-snapshot-memory-size = {{influx_cache_snapshot_memory_size}}
  cache-snapshot-write-cold-duration = "0h30m0s"
  compact-full-write-cold-duration = "1h0m0s"
  max-points-per-block = 0
  data-logging-enabled = true
  max-series-per-database = 0
  max-values-per-tag = 0    # 1.1 default

[coordinator]
  force-remote-mapping = false
  write-timeout = "5s"
  shard-writer-timeout = "5s"
  max-remote-write-connections = 3
  shard-mapper-timeout = "5s"
  max-select-point = 1000   # have to be checked. speedup enhancement
  max-select-series = 0
  max-select-buckets = 0
  max-concurrent-queries = 200
  query-timeout = "1m"     # kill long running threads

[retention]
  enabled = true
  check-interval = "10m0s"

[shard-precreation]
  enabled = true
  check-interval = "10m0s"
  advance-period = "30m0s"

[admin]
  enabled = false   # will be disabled after 1.1
  bind-address = ":8083"
  https-enabled = false
  https-certificate = "/etc/ssl/influxdb.pem"
  Version = ""

[monitor]
  store-enabled = false # already stored via telegraf
  store-database = "_internal"
  store-interval = "10s"

[subscriber]
  enabled = true

[http]
  enabled = true
  bind-address = ":{{ influxdb_port }}"
  auth-enabled = false
  log-enabled = false
  write-tracing = false
  pprof-enabled = true
  https-enabled = false
  https-certificate = "/etc/ssl/influxdb.pem"
  max-row-limit = 10000

[[graphite]]
  enabled = false
  bind-address = ":2003"
  database = "graphite"
  protocol = "tcp"
  batch-size = 5000
  batch-pending = 10
  batch-timeout = "1s"
  consistency-level = "one"
  separator = "."
  udp-read-buffer = 0

[[opentsdb]]
  enabled = false

[[udp]]
  enabled = false
  bind-address = ":8089"
  database = "udp"
  retention-policy = ""
  batch-size = 5000
  batch-pending = 10
  read-buffer = 0
  batch-timeout = "1s"
  precision = ""
  udp-payload-size = 0

[continuous_queries]
  log-enabled = true
  enabled = true
  run-interval = "1m"