//
// Create database and initialize users
//
(function() {
    var user = "{{ noc_mongo_user }}",
        passwd = "{{ noc_mongo_password }}",
        du = db.getUser(user);
    if(du) {
        db.changeUserPassword(user, passwd);
    } else {
        db.createUser({
            user: user,
            pwd: passwd,
            roles: [{role: "dbOwner", db: "{{noc_mongo_db}}"}]
        });
    }
})();
