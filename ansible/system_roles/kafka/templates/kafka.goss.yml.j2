port:
  tcp:{{ kafka_bootstrap_port }}:
    listening: true
  tcp:{{ kafka_controller_port }}:
    listening: true
service:
  kafka:
    enabled: true
    running: true
user:
  {{ kafka_user }}:
    exists: true
group:
  {{ kafka_group }}:
    exists: true
file:
  {{ kafka_server_conf }}:
    exists: true
    mode: "0644"
    owner: {{ kafka_user }}
    group: {{ kafka_group }}
    linked-to: /opt/kafka/config/kraft/server.properties
    filetype: symlink
