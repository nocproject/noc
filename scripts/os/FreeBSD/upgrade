COMP=`./bin/python -c "import sys; print 'CLANG' if 'clang' in sys.version.lower() else 'GCC'"`

if [ "$COMP" == "GCC" ]; then
    ## Adjust include path
    CPATH="/usr/local/include:$CPATH"
    export CPATH
fi

