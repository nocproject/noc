<table class="table table-condensed table-hover">
<tbody>
</tbody>
<tr>
    <th colspan="2">
        {{ object.name }}
    </th>
</tr>
<tr>
    <th scope="row" class="col-md-2">
        {{ _("Description") }}
    </th>
    <td>
        {% if object.description %} {{ object.description }} {% endif %}
    </td>
</tr>
<tr>
    <th scope="row">
        {{ _("Mask") }}
    </th>
    <td> {{ object.mask }} </td>
</tr>
<tr>
    <th scope="row">
        {{ _("Ranges") }}
    </th>
    <td>
        <table>
            <thead>
                <tr>
                    <th class="col-md-2">
                        {{ _("Name") }}
                    </th>
                    <th class="col-md-3">
                        {{ _("Range") }}
                    </th>
                    <th class="col-md-1">
                        {{ _("Numbers") }}
                    </th>
                    <th class="col-md-6">
                        {{ _("Description") }}
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for r in ranges %}
                <tr>
                    <td>
                        <a href="/api/card/view/phonerange/{{ r.id }}/">{{ r.name }}</a>
                    </td>
                    <td>
                        <a href="/api/card/view/phonerange/{{ r.id }}/">{{ r.from_number }} - {{ r.to_number }}</a>
                    </td>
                    <td>{{ r.total_numbers }}</td>
                    <td>{% if r.description %} {{ r.description }} {% endif %}</td>
                {% endfor %}
            </tbody>
        </table>
    </td>
</tr>
</table>
