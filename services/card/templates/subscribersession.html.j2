{% if macs %}
<table class="table table-condensed">
    <thead>
        <tr>
            <th>VLAN</th>
            <th>MAC</th>
            <th>MAC Vendor</th>
        <tr>
    </thead>
    <tbody>
        {% for m in macs %}
        <tr>
            <td>{{ m["vlan_id"] }}</td>
            <td>{{ m["mac"] }}</td>
            <td>{{ m["mac_vendor"] }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
No MAC addresses found
{% endif %}
