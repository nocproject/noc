{% if macs %}
<table class="table table-condensed">
    <thead>
        <tr>
            <th>{{ _("VLAN") }}</th>
            <th>{{ _("MAC") }}</th>
            <th>{{ _("MAC Vendor") }}</th>
        <tr>
    </thead>
    <tbody>
        {% for m in macs %}
        <tr>
            <td>{{ m["vlan_id"] }}</td>
            <td>{{ m["mac"] }}</td>
            <td>{{ m["mac_vendor"] }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
No MAC addresses found
{% endif %}
