{
  "name": "noc-builder",
  "version": "1.0.0",
  "main": "index.js",
  "config": {
    "defaultTheme": "noc",
    "defaultLanguage": "en"
  },
  "scripts": {
    "dev": "node --experimental-strip-types build.ts dev noc en",
    "prod": "node --experimental-strip-types build.ts prod",
    "vendor": "node --experimental-strip-types build.ts vendor",
    "vendor-dev": "node --experimental-strip-types build.ts vendor-dev noc en",
    "sync": "browser-sync start --proxy 'localhost:8080' --files 'dist/*.*' --no-open",
    "test": "jest",
    "lint": "eslint scripts --fix",
    "build": "npm run prod && npm run vendor",
    "build:micromark": "node --experimental-strip-types build-bundle.ts micromark",
    "build:monaco": "node --experimental-strip-types build-bundle.ts monaco"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@jest/globals": "^30.1.2",
    "@playwright/test": "^1.53.0",
    "@types/espree": "^10.1.0",
    "@types/estree": "^1.0.8",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "24.4.0",
    "astring": "^1.9.0",
    "browser-sync": "^3.0.4",
    "esbuild": "0.25.9",
    "eslint": "^9.28.0",
    "espree": "^10.3.0",
    "estree-walker": "^3.0.3",
    "fs-extra": "^11.3.0",
    "globals": "^16.2.0",
    "jest": "^30.1.3",
    "playwright": "^1.53.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.33.1"
  },
  "dependencies": {
    "dompurify": "^3.2.6",
    "micromark": "^4.0.2",
    "micromark-extension-gfm": "^3.0.0",
    "monaco-editor": "^0.53.0"
  },
  "overrides": {
    "test-exclude": {
      "glob": "^10.0.0"
    }
  }
}