{
  "name": "noc-builder",
  "version": "1.0.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gufolabs/noc.git",
    "directory": "ui"
  },
  "config": {
    "defaultTheme": "noc",
    "defaultLanguage": "en"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": "^22.0.0"
  },
  "pnpm": {
    "overrides": {
      "dompurify": "^3.3.0"
    }
  },
  "scripts": {
    "dev": "node --experimental-strip-types build.ts dev noc en",
    "prod": "node --experimental-strip-types build.ts prod",
    "vendor": "node --experimental-strip-types build.ts vendor",
    "vendor-dev": "node --experimental-strip-types build.ts vendor-dev noc en",
    "sync": "browser-sync start --proxy 'localhost:8080' --files 'dist/*.*' --no-open",
    "lint": "eslint scripts --fix",
    "build": "pnpm run vendor && pnpm run prod",
    "build:micromark": "node --experimental-strip-types build-bundle.ts micromark",
    "build:monaco": "node --experimental-strip-types build-bundle.ts monaco",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@types/espree": "^10.1.0",
    "@types/estree": "^1.0.8",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.19.0",
    "astring": "^1.9.0",
    "browser-sync": "^3.0.4",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "espree": "^10.4.0",
    "estree-walker": "^3.0.3",
    "fs-extra": "^11.3.2",
    "globals": "^16.5.0",
    "playwright": "^1.56.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "dompurify": "^3.3.0",
    "micromark": "^4.0.2",
    "micromark-extension-gfm": "^3.0.0",
    "monaco-editor": "^0.54.0"
  }
}