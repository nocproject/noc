{
  "name": "noc-builder",
  "version": "1.0.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gufolabs/noc.git",
    "directory": "ui"
  },
  "config": {
    "defaultTheme": "noc",
    "defaultLanguage": "en"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": "^22.0.0"
  },
  "overrides": {
    "js-yaml": "4.1.1"
  },
  "pnpm": {
    "overrides": {
      "js-yaml": "4.1.1"
    }
  },
  "scripts": {
    "dev": "node --experimental-strip-types build.ts dev noc en",
    "prod": "node --experimental-strip-types build.ts prod",
    "vendor": "node --experimental-strip-types build.ts vendor",
    "vendor-dev": "node --experimental-strip-types build.ts vendor-dev noc en",
    "sync": "browser-sync start --proxy 'localhost:8080' --files 'dist/*.*' --no-open",
    "lint": "eslint scripts --fix",
    "build": "pnpm run vendor && pnpm run prod",
    "build:micromark": "node --experimental-strip-types build-bundle.ts micromark",
    "build:monaco": "node --experimental-strip-types build-bundle.ts monaco",
    "build:leaflet": "node --experimental-strip-types build-bundle.ts leaflet",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@types/espree": "^10.1.0",
    "@types/estree": "^1.0.8",
    "@types/fs-extra": "^11.0.4",
    "@types/leaflet": "^1.9.21",
    "@types/node": "^22.19.3",
    "astring": "^1.9.0",
    "browser-sync": "^3.0.4",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "espree": "^10.4.0",
    "estree-walker": "^3.0.3",
    "fs-extra": "^11.3.2",
    "globals": "^16.5.0",
    "magic-string": "^0.30.21",
    "playwright": "^1.57.0",
    "source-map": "^0.7.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@gufo-labs/font": "^0.0.3",
    "color-input": "github:argyleink/css-color-component#cdn-latest",
    "dompurify": "^3.3.1",
    "leaflet": "^1.9.4",
    "micromark": "^4.0.2",
    "micromark-extension-gfm": "^3.0.0",
    "monaco-editor": "^0.55.1",
    "ymaps": "^0.2.1"
  }
}